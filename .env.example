# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=3306

# Django Secret Key - Generate a new one at https://djecrety.ir/
SECRET_KEY=your-super-secret-key-here-min-50-characters

# Email Configuration (Optional)
EMAIL_HOST=mail.yourdomain.com
EMAIL_PORT=587
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your_email_password

# Domain Configuration
ALLOWED_HOSTS=transportandlogisticssummit.ng,www.transportandlogisticssummit.ng

# Debug Mode (Never set to True in production)
DEBUG=False